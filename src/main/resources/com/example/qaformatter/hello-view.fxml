<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.qaformatter.HelloApplication">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <GridPane style="-fx-alignment: CENTER">
        <CheckBox fx:id="checkBox" GridPane.columnIndex="0" GridPane.rowIndex="0"  /><Label fx:id="guideText" style="-fx-font: 14 arial;" GridPane.columnIndex="1" GridPane.rowIndex="0" text="1.topic of the paper" />
        <CheckBox fx:id="checkBox2" GridPane.columnIndex="0" GridPane.rowIndex="1" /><Label fx:id="guideText2" style="-fx-font: 14 arial;" GridPane.columnIndex="1" GridPane.rowIndex="1" text="2.originality"/>
        <CheckBox fx:id="checkBox3" GridPane.columnIndex="0" GridPane.rowIndex="2" /><Label fx:id="guideText3" style="-fx-font: 14 arial;" GridPane.columnIndex="1" GridPane.rowIndex="2"  text="3.word count"/>
        <CheckBox fx:id="checkBox4" GridPane.columnIndex="0" GridPane.rowIndex="3" /><Label fx:id="guideText4" style="-fx-font: 14 arial;" GridPane.columnIndex="1" GridPane.rowIndex="3" text="4.instructions"/>
        <CheckBox fx:id="checkBox5" GridPane.columnIndex="0" GridPane.rowIndex="4" /><Label fx:id="guideText5" style="-fx-font: 14 arial;" GridPane.columnIndex="1" GridPane.rowIndex="4" text="5.features"/>
        <CheckBox fx:id="checkBox6" GridPane.columnIndex="0" GridPane.rowIndex="5" /><Label fx:id="guideText6" style="-fx-font: 14 arial;" GridPane.columnIndex="1" GridPane.rowIndex="5" text="6.proofread/format"/>
        <CheckBox fx:id="checkBox7" GridPane.columnIndex="0" GridPane.rowIndex="6" /><Label fx:id="guideText7" style="-fx-font: 14 arial;" GridPane.columnIndex="1" GridPane.rowIndex="6" text="7.rate" />
        <CheckBox fx:id="checkBox8" GridPane.columnIndex="0" GridPane.rowIndex="7" /><Label fx:id="guideText8" style="-fx-font: 14 arial;" GridPane.columnIndex="1" GridPane.rowIndex="7" text="8.move to the next folder"/>
    </GridPane>
    <Label fx:id="dragText" style="-fx-font: 18 arial;"/>

    <Label fx:id="ReferenceCountText" />
    <Label fx:id="wordCountText" />
    <Button fx:id="FORMAT" onAction="#handleButton" style="-fx-font: 14 arial; -fx-base: #7618A0FF; -fx-row-valignment: CENTER  " text="FORMAT!"/>
    <Button fx:id="COUNT" onAction="#handleButton" style="-fx-font: 14 arial; -fx-base: #7618A0FF; -fx-row-valignment: CENTER  " text="COUNT!"/>




</VBox>
