<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.CheckBox?>

<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.qaformatter.HelloApplication">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <GridPane style="-fx-alignment: CENTER">
        <CheckBox fx:id="checkBox" GridPane.columnIndex="0" GridPane.rowIndex="0"  /><TextField fx:id="guideText" style="-fx-font: 14 arial;" GridPane.columnIndex="2" GridPane.rowIndex="0" text="Topic of the paper" />
        <CheckBox fx:id="checkBox2" GridPane.columnIndex="0" GridPane.rowIndex="1" /><TextField fx:id="guideText2" style="-fx-font: 14 arial;" GridPane.columnIndex="2" GridPane.rowIndex="1" text="Originality" />
        <CheckBox fx:id="checkBox3" GridPane.columnIndex="0" GridPane.rowIndex="2" /><TextField fx:id="guideText3" style="-fx-font: 14 arial;" GridPane.columnIndex="2" GridPane.rowIndex="2"  text="Word count" />
        <CheckBox fx:id="checkBox4" GridPane.columnIndex="0" GridPane.rowIndex="3" /><TextField fx:id="guideText4" style="-fx-font: 14 arial;" GridPane.columnIndex="2" GridPane.rowIndex="3" text="Instructions"/>
        <CheckBox fx:id="checkBox5" GridPane.columnIndex="0" GridPane.rowIndex="4" /><TextField fx:id="guideText5" style="-fx-font: 14 arial;" GridPane.columnIndex="2" GridPane.rowIndex="4" text="Features"/>
        <CheckBox fx:id="checkBox6" GridPane.columnIndex="0" GridPane.rowIndex="5" /><TextField fx:id="guideText6" style="-fx-font: 14 arial;" GridPane.columnIndex="2" GridPane.rowIndex="5" text="Proofread/format"/>
        <CheckBox fx:id="checkBox7" GridPane.columnIndex="0" GridPane.rowIndex="6" /><TextField fx:id="guideText7" style="-fx-font: 14 arial;" GridPane.columnIndex="2" GridPane.rowIndex="6" text="Rate" />
        <CheckBox fx:id="checkBox8" GridPane.columnIndex="0" GridPane.rowIndex="7" /><TextField fx:id="guideText8" style="-fx-font: 14 arial;" GridPane.columnIndex="2" GridPane.rowIndex="7" text="Move to the next folder"/>
    </GridPane>

    <Label fx:id="dragText" style="-fx-font: 18 arial;"/>
    <Label fx:id="ReferenceCountText" />
    <Label fx:id="wordCountText" />
    <Button fx:id="FORMAT" onAction="#handleButton" style="-fx-font: 14 arial; -fx-base: #7618A0FF; -fx-row-valignment: CENTER  " text="FORMAT!"/>
    <Button fx:id="COUNT" onAction="#handleButton" style="-fx-font: 14 arial; -fx-base: #7618A0FF; -fx-row-valignment: CENTER  " text="COUNT!"/>




</VBox>
