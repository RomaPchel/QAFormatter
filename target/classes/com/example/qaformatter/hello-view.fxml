<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.qaformatter.HelloApplication">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
