    <GridPane>
        <Label fx:id="hoverText" style="-fx-font: 16 arial; -fx-base: #ffffff; -fx-row-valignment: CENTER; -fx-font-weight: bold " GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Label text="                                        " GridPane.columnIndex="1" GridPane.rowIndex="0"/>
